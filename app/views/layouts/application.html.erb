<!DOCTYPE html>
<html>
  <head>
    <title>Zombies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
        <nav class="navbar navbar-light bg-light">
          <a href="/zombies"><img src="" class="logo rounded float-lef" ></a>
          <%=form_tag zombies_path, method:"GET", id: "search" do%>
            <%= text_field_tag :query %>
            <%= submit_tag "Search" %>
          <% end %>
          <a class="navbar-brand" href="/"> Welcome, <%= User.find_by(id: [current_user.id]).email%></a>
          <button class="btn btn-outline-success" type="button"><%=  link_to "Sign out",destroy_user_session_path, :method => 'delete'
          %></button>
        </nav>
        <% else  %>
        <nav class="navbar navbar-light bg-light">
            <a href="/zombies"><img src="" class="logo rounded float-left" ></a>
            <button class="btn btn-outline-success" type="button"><a href="<%= new_user_session_path %>">Log In</a></button>
            <button class="second btn btn-outline-success" type="button"><%=  link_to "Sign In", new_user_registration_path%></button>
          <%=form_tag zombies_path, method:"GET", id: "search" do %>
            <%= text_field_tag :query %>
            <%= submit_tag "Search" %>
          <% end %>
        </nav>
        <%end%>

    <%if flash[:notice]%>
      <div class="alert alert-info"><%=flash[:notice]%></div>
    <%end%>

    <%= yield %>
  </body>
</html>
