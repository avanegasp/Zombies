<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Zombies</h1>
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Graveyard</th>
          <th>Edit</th>
        </tr>
        <%@zombies.each do |zombie|%>
        <tr>
          <div class="">
            <td><%=link_to zombie.name, zombie_path(zombie)%></td>

          </div>
          <td><%=zombie.graveyard%></td>
          <td><%=link_to "Editar", edit_zombie_path(zombie)%></td>
        </tr>
        <%end%>
      </table>
      <div class="">
        <%=link_to "Crear un nuevo zombie", new_zombie_path, class:"btn btn_primary btn-lg btn-block"%>
      </div>
    </div>
  </div>
</div>
